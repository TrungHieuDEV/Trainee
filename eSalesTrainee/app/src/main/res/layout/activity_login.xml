<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/bacground"
    tools:context=".Login.LoginActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:paddingRight="18dp"
            android:orientation="vertical"
            android:layout_gravity="center|bottom"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="eSales"
                android:textColor="@color/colorRed"
                android:textStyle="bold"
                android:textSize="130px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>
            <TextView
                android:text="Excellent Sales Solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Tên đăng nhập"
            android:id="@+id/edtDangNhap"
            android:textSize="35px"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Mật khẩu"
            android:id="@+id/edtMatKhau"
            android:textSize="35px"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="đăng nhập"
                android:id="@+id/btnDangNhap"
                android:textSize="30px"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorRed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp" />
            <Button
                android:text="Thoát"
                android:id="@+id/btnThoat"
                android:textSize="30px"
                android:textColor="@color/colorWhite"
                android:background="@color/colorRed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <Button
            android:text="về chúng tôi"
            android:textSize="30px"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGrey"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="Phiên bản ngày:163546874_0055"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="eSales Version:2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>