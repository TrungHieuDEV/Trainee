<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/colorGreyOne"
        android:layout_width="350dp"
        android:layout_height="550dp">

        <LinearLayout
            android:background="@color/colorRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Chọn mặt hàng"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="Tìm Kiếm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Tìm theo mã"
                android:id="@+id/timMatHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/colorRed"
            android:layout_weight="0.8"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="#"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="4"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"></LinearLayout>

                <TextView
                    android:text="Mặt hàng"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"></LinearLayout>

                <TextView
                    android:text="Giá"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"></LinearLayout>

                <TextView
                    android:text="Số Lượng"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_weight="7"
            android:id="@+id/recyclerView_MatHang"
            android:layout_width="match_parent"
            android:layout_height="0dp"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"></LinearLayout>

            <Button
                android:text="Đóng"
                android:layout_weight="1"
                android:id="@+id/btnDong"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:text="Đồng ý"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btnDongY"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>